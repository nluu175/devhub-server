{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Changed from NodeNext
    "moduleResolution": "Node", // Changed from NodeNext
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
